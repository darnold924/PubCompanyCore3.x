@page
@model DetailModel
@{
    ViewData["Title"] = "Detail";
}

<style type="text/css">
    .editor-field > label {
        float: left;
        width: 150px;
    }
</style>
<html>
<head>
    <title>Author Detail</title>
</head>

<body>
<h1>Author</h1>

<fieldset>

    <legend>Detail</legend>

    <div class="form-group">
        <div class="editor-field">
            @Html.Label("First Name:")
            @Html.Display("Author.FirstName")
        </div>
    </div>

    <div class="form-group">
        <div class="editor-field">
            @Html.Label("Last Name:")
            @Html.Display("Author.LastName")
        </div>
    </div>

</fieldset>

</body>
</html>


